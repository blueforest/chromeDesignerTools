{
  "name": "Eye Dropper",
  "version": "0.3.2",
  "manifest_version": 2,
  "description": "Eye Dropper is open source extension which allows you to pick colors from web pages, color picker and your personal color history.",

  "background": {
      "page": "background.html",
      "persistent": true
  },
  "options_page": "options.html",

  "icons": {
    "48": "img/icon_48.png",
    "128": "img/icon_128.png"
  },
  "content_scripts": [
    {
      "js": [ "inc/jquery-1.7.1.min.js", "inc/jquery-special-scroll.js" ],
      "matches": [ "http://*/*", "https://*/*", "ftp://*/*", "file://*/*" ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": {
        "19":   "img/icon_19.png",
        "38":   "img/icon_38.png"
    },
    "default_title": "Eye Dropper",
    "default_popup": "popup.html"
  },

  "permissions": [ "tabs", "http://*/*", "https://*/*" ],

  "web_accessible_resources": [
      "inc/jquery-1.7.1.min.js",
      "inc/jquery-special-scroll.js",
      "edropper2.js",
      "inject/anchor-cursor-default.css",
      "inject/anchor-cursor-crosshair.css",
      "inject/edropper2.css"
  ]
}
